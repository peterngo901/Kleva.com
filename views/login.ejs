<%- include('reusables/head.ejs'); %>
    </head>

    <body>
            <%- include('reusables/navbar-bootstrap.ejs'); %>
            <div class="content">
                <!-- Main Content Area -->
                <main class="upload">
                    <!-- Game Upload Form -->
                    <div class="upload-form">
                        <form action="/signup" class="upload-form__text" method="POST">
                            <!-- Username -->
                            <label class="upload-form__title" for="username">Email Username</label>
                            <input class="upload-form__title-field" type="email" id="username" name="username" placeholder="Username"><br>
                            
                            <!-- Password -->
                            <label class="upload-form__title" for="title">Password</label>
                            <input class="upload-form__title-field" type="password" id="password" name="password" placeholder="Password"><br>
                            
                            <!-- Submission Button -->
                            <input class="upload-form__button" type="submit" value="Login">
                        </form>
                    </div>
                </main>   
            </div>
            <!-- Signin Error -->
            
            <% if (error) { %>
                <div class="alert">
                    <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span>
                    <%= error %>
                </div>
            <% } %>
        </div>
    </body>
    
</html>

