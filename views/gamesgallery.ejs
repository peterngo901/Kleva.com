-->

    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <!-- Kleva Logo -->
      <a href="/home"
        ><img src="../img/logo.png" alt="Kleva" class="logo navbar-brand"
      /></a>
      <button
        class="navbar-toggler"
        type="button"
        data-toggle="collapse"
        data-target="#navbarSupportedContent"
        aria-controls="navbarSupportedContent"
        aria-expanded="false"
        aria-label="Toggle navigation"
      >
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto ml-2 mt-2">
          <li class="nav-item active">
            <a class="nav-link" href="/gamesgallery/?page=1"
              >Games Gallery<span class="sr-only">(current)</span></a
            >
          </li>
          <li class="nav-item active">
            <a class="nav-link" href="/about"
              >About<span class="sr-only">(current)</span></a
            >
          </li>
          <li class="nav-item active">
            <a class="nav-link" href="/login"
              >Login<span class="sr-only">(current)</span></a
            >
          </li>
          <li class="nav-item"></li>
          <li class="nav-item active">
            <a class="nav-link" href="../creator-dashboard"
              >Creators<span class="sr-only">(current)</span></a
            >
          </li>
          <!-- Other Types of Navbar Elements
      <li class="nav-item">
        <a class="nav-link" href="#">Link</a>
      </li>
      <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          Dropdown
        </a>
        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
          <a class="dropdown-item" href="#">Action</a>
          <a class="dropdown-item" href="#">Another action</a>
          <div class="dropdown-divider"></div>
          <a class="dropdown-item" href="#">Something else here</a>
        </div>
      </li>
      <li class="nav-item">
        <a class="nav-link disabled" href="#" tabindex="-1" aria-disabled="true">Disabled</a>
      </li>  -->
        </ul>
      </div>
    </nav>

    <div class="wrapper">
      <div class="container">
        <!--Featured Button-->
        <div class="col-xs-1 my-2">
          <button type="button" class="btn btn-outline-secondary btn-sm">
            Featured
          </button>
        </div>

        <!--Game Banner-->
        <div class="row justify-content-center rounded bg-game">
          <div class="col-lg-5">
            <a href="/gamepage"
              ><img
                src="../img/bridgeConFeatureSplash.png"
                class="img-fluid mx-auto d-block"
                alt="Bridge Constructor Splash"
            /></a>
          </div>
          <div class="col-lg-7">
            <h3>Bridge Constructor</h3>
            <p>Build a bridge, get over it. Highly Educational</p>
            <div class="row">
              <div class="col">
                <img
                  src="../img/bridgeConScreen1.png"
                  class="img-fluid"
                  alt="Bridge Constructor 1"
                />
              </div>
              <div class="col">
                <img
                  src="../img/bridgeConScreen2.png"
                  class="img-fluid"
                  alt="Bridge Constructor 2"
                />
              </div>
              <div class="col">
                <img
                  src="../img/bridgeConScreen3.png"
                  class="img-fluid"
                  alt="Bridge Constructor 3"
                />
              </div>
              <div class="col">
                <img
                  src="../img/bridgeConScreen4.png"
                  class="img-fluid"
                  alt="Bridge Constructor 4"
                />
              </div>
            </div>
            <div class="d-flex justify-content-between">
              <h4 class="h-100 align-self-end cost">A$ 14.99</h4>
              <div class="windows-logo h-100 align-self-end">
                <img
                  src="../img/windowsPlatform.png"
                  class="img-fluid"
                  alt="Windows Platform"
                />
              </div>
            </div>
          </div>
        </div>

        <!--Game Slideshow Controls-->
        <div class="row justify-content-center">
          <button
            type="button"
            class="m-1 btn btn-dark btn-circle btn-sm"
          ></button>
          <button
            type="button"
            class="m-1 btn btn-light btn-circle btn-sm"
          ></button>
          <button
            type="button"
            class="m-1 btn btn-light btn-circle btn-sm"
          ></button>
          <button
            type="button"
            class="m-1 btn btn-light btn-circle btn-sm"
          ></button>
          <button
            type="button"
            class="m-1 btn btn-light btn-circle btn-sm"
          ></button>
        </div>

        <!--Trending Button-->
        <div class="col-xs-1 my-2">
          <button type="button" class="btn btn-outline-secondary btn-sm">
            Trending
          </button>
        </div>
      </div>

      <!-- Page Content -->
      <div class="container">
        <div class="row">
          <div class="col-lg-3">
            <div class="list-group mt-3">
              <a href="#" class="list-group-item">English</a>
              <a href="#" class="list-group-item">Maths</a>
              <a href="#" class="list-group-item">Science</a>
            </div>
          </div>
        </div>
        <!-- /.col-lg-3 -->

        <div class="row mt-5">
          <!-- Game Loader -->
          <% if (games.length > 0) { %> <% for (let game of games) { %>
          <div class="col-lg-4 col-md-6 mb-4">
            <div class="card h-100">
              <a href="#"
                ><img
                  class="card-img-top"
                  src="<%- game.gameImageURL %>"
                  alt=""
              /></a>
              <div class="card-body">
                <h4 class="card-title">
                  <a href="#"><%- game.title %></a>
                </h4>
                <p class="card-text"><%- game.description %></p>
              </div>
              <div class="card-footer">
                <small><%- game.category %></small>
              </div>
            </div>
          </div>
          <% } %> <% } %>
          <!-- /.row -->
        </div>
        <!-- Game Page Buttons -->
        <div class="row mt-3 justify-content-center">
          <% if (pageButtons => 1) { %>
          <nav aria-label="Game Results Pages">
            <ul class="pagination">
              <% for(i=0; i < pageButtons; i++) { %>
              <li class="page-item">
                <a
                  class="page-link <%= pageNumber === i + 1 ? 'active' : '' %>"
                  href="/gamesgallery/?page=<%- i+1 %>"
                  ><%- i+1 %></a
                >
              </li>
              <% } %>
            </ul>
          </nav>
          <% } %>
        </div>

        <!-- /.container -->
      </div>
    </div>
  </body>
  <!-- Footer -->
  <footer class="py-5 bg-dark">
    <div class="container">
      <p class="text-center text-white m-0">
        Copyright &copy; Your Website 2020
      </p>
      <!-- /.container -->
    </div>
  </footer>
</html>
